@model Escuela

@{
    ViewData["Title"] = "Información Escuela";
    //Layout="Simple";
}

<h1>
    Escuela
</h1>
<h2>Nombre: @ViewData["Title"]</h2>
    <h3>Tipo de Escuela: @Model.TipoEscuela</h3>
    @* Accediendo por Viewbag: @ViewBag.CosaDinamica
        Accediendo por ViewData @ViewData["CosaDinamica"] *@
    <address>
        <p>Dirección: @Model.Dirección </p>
        <p>País: @Model.Pais</p>
        <p>Ciudad: @Model.Ciudad</p>
    </address>
    <p><strong>Año de fundación: @Model.AñoDeCreación </strong></p>